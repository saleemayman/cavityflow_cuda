<?xml version="1.0" encoding="ISO-8859-1"?>
<lbm-configuration>
  <!-- configuration data related to physcis of the simulation -->
  <physics>
    <gravitation>
      <x>0</x>
      <y>-9.81</y>
      <z>0</z>
    </gravitation>
    <cavity-velocity>
      <x>100</x>
      <y>0</y>
      <z>0</z>
      <w>1</w>
    </cavity-velocity>
    <viscosity>0.001308</viscosity>
    <tau>0.953575</tau>
    <mass-exchange-factor>1.0</mass-exchange-factor>
    <max-gravitation>0.0001</max-gravitation>
  </physics>
  <!-- configuration data related to simulation grid -->
  <grid>
    <!-- grid size in x, y and z direction (unit: cells) -->
    <domain-size>
      <x>64</x>
      <y>128</y>
      <z>256</z>
    </domain-size>
    <!-- grid length in x, y and z direction (unit: meters) -->
    <domian-length>
      <x>0.1</x>
      <y>0.2</y>
      <z>0.4</z>
    </domian-length>
    <!-- number of subdomains in x, y and z direction -->
    <subdomain-num>
      <x>1</x>
      <y>1</y>
      <z>1</z>
    </subdomain-num>
    <!-- ratio in x, y and z direction of subdomain cells which are processed by the CPU ([0.0, 1.0]) (unit: scalar factor) -->
    <cpu-subdomain-ratio>
      <x>0.5</x>
      <y>0.5</y>
      <z>0.5</z>
    </cpu-subdomain-ratio>
  </grid>
  <!-- configuration data related to simulation process -->
  <simulation>
    <loops>0</loops>
    <!-- timestep size, -1 for automatic detection -->
    <timestep>-1.0</timestep>
    <!--  -->
    <do-benchmark>1</do-benchmark>
    <benchmark-output-dir>benchmark</benchmark-output-dir>
    <!--  -->
    <do-logging>1</do-logging>
    <!--  -->
    <do-validation>0</do-validation>
    <validation-output-dir>validation/</validation-output-dir>
    <!--  -->
    <do-visualization>1</do-visualization>
    <visualization-output-dir>visualization/</visualization-output-dir>
  </simulation>
  <!-- configuration data related to computing device (e.g. GPU) -->
  <device>
    <!--  -->
    <grid-configuration>
      <!-- Grid configuration (number of threads per block) in x, y and z direction for kernel lbm_init() -->
      <init-grid-configuration>
        <x>32</x>
        <y>1</y>
        <z>1</z>
      </init-grid-configuration>
      <!-- Grid configuration (number of threads per block) in x, y and z direction for kernel lbm_alpha() -->
      <alpha-grid-configuration>
        <x>32</x>
        <y>1</y>
        <z>1</z>
      </alpha-grid-configuration>
      <!-- Grid configuration (number of threads per block) in x, y and z direction for kernel lbm_beta() -->
      <beta-grid-configuration>
        <x>32</x>
        <y>1</y>
        <z>1</z>
      </beta-grid-configuration>
    </grid-configuration>
  </device>
</lbm-configuration>

