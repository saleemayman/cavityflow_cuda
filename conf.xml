<?xml version="1.0" encoding="ISO-8859-1"?>
<lbm-configuration>
  <!-- configuration data related to physcis of the simulation -->
  <physics>
    <viscosity>0.001308</viscosity>
    <!-- <viscosity>0.001</viscosity> -->
    <gravitation>
      <x>0</x>
      <y>-9.81</y>
      <z>0</z>
    </gravitation>
    <cavity-velocity>
      <x>100</x>
      <y>0</y>
      <z>0</z>
      <w>1</w>
    </cavity-velocity>
  </physics>
  <!-- configuration data related to simulation grid -->
  <grid>
    <!-- grid resolution in x, y and z direction -->
    <domain-size>
      <x>64</x>
      <y>64</y>
      <z>32</z>
    </domain-size>
    <!-- number of subdomains  in x, y and z direction -->
    <subdomain-num>
      <x>2</x>
      <y>2</y>
      <z>1</z>
    </subdomain-num>
    <domian-length>
      <x>0.1</x>
      <y>0.1</y>
      <z>0.1</z>
    </domian-length>
  </grid>
  <!-- configuration data related to simulation process -->
  <simulation>
    <loops>100</loops>
    <!-- timestep default: -1 for automatic detection -->
    <timestep>-1.0</timestep>
    <visualization>
      <VTK>0</VTK>
    </visualization>
    <validate>0</validate>
  </simulation>
  <!-- configuration data related to computing device (e.g. GPU) -->
  <device>
    <init-kernel-block-dim>
      <x>16</x>
      <y>4</y>
      <z>1</z>
	</init-kernel-block-dim>
    <alpha-kernel-block-dim>
      <x>16</x>
      <y>16</y>
      <z>1</z>
	</alpha-kernel-block-dim>
    <beta-kernel-block-dim>
      <x>16</x>
      <y>8</y>
      <z>2</z>
	</beta-kernel-block-dim>
    <!-- select device or -1 list available devices -->
    <device-number>0</device-number>
  </device>
</lbm-configuration>
